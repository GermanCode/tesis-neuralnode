<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/nn/edit/{{users.id}}" method="POST">
                        <div class="form-group">
                            <p>Username</p>
                            <input type="text" class="form-control" name="username" value="{{users.username}}">
                        </div>
                        <div class="form-group">
                            <p>Password</p>
                            <input type="text" class="form-control" value="{{users.password}}" name="password">
                        </div>
                         <div class="form-group">
                             <p>FullName</p>
                            <input type="text" class="form-control" value="{{users.fullname}}" name="fullname">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">SAVE</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>